{
    "name": "Cesium.tv Channel Creator",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_icon": {
          "16": "assets/cesium-16.png",
          "48": "assets/cesium-48.png",
          "128": "assets/cesium-128.png"
        },
        "default_title": "Cesium.tv Channel Creator"
      },
    "icons": {
        "16": "assets/cesium-16.png",
        "48": "assets/cesium-48.png",
        "128": "assets/cesium-128.png"
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-scripts/main.js"]
        }
    ],
    "options_page": "options/index.html",
    "permissions": [
        "tabs"
    ]

}